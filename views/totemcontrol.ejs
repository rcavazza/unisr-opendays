<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Set Mode</title>
    <style>
        /* Stile generale per il layout mobile */
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }
        .container {
            text-align: center;
            width: 100%;
        }
        h1 {
            margin-bottom: 20px;
            color: #333;
        }
        .button {
            display: block; /* Pulsanti in colonna */
            width: 80%;
            max-width: 300px;
            padding: 15px;
            margin: 10px auto; /* Centrare con margine */
            font-size: 18px;
            color: white;
            background-color: #007BFF;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
            cursor: pointer;
        }
        .button:hover {
            background-color: #0056b3;
        }
        .button:active {
            background-color: #003f7f;
        }
        .button:nth-child(2) {
            background-color: #28A745;
        }
        .button:nth-child(2):hover {
            background-color: #1e7e34;
        }
        .button:nth-child(2):active {
            background-color: #145822;
        }
        .button:nth-child(3) {
            background-color: #FFC107;
        }
        .button:nth-child(3):hover {
            background-color: #e0a800;
        }
        .button:nth-child(3):active {
            background-color: #b38700;
        }
        #result {
            margin-top: 20px;
            font-size: 18px;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Seleziona una Modalità</h1>
        <button class="button" onclick="setMode('image')">Modalità Immagine</button>
        <button class="button" onclick="setMode('pdf')">Modalità PDF</button>
        <button class="button" onclick="setMode('loop')">Modalità Loop</button>
        <div id="result"></div> <!-- Elemento per mostrare il risultato -->
    </div>

    <script>
        // Funzione per inviare la richiesta e aggiornare il risultato
        async function setMode(mode) {
            try {
                const response = await fetch(`/setmode/${mode}`);
                if (response.ok) {
                    const text = await response.text();
                    document.getElementById('result').textContent = text;
                } else {
                    document.getElementById('result').textContent = 
                        `Errore: ${response.status} - ${response.statusText}`;
                }
            } catch (error) {
                document.getElementById('result').textContent = 
                    `Errore durante la richiesta: ${error.message}`;
            }
        }
    </script>
</body>
</html>
