<!DOCTYPE html>
<html lang="it" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrati all'Evento</title>
    <link rel="stylesheet" href="/css/common-layout.css">
    <style>
        @font-face {
            font-family: 'Viridian College';
            src: url('/fonts/ViridianCollege.otf') format('opentype'),
                 url('/fonts/ViridianCollege.woff') format('woff');
            font-weight: normal;
            font-style: normal;
        }
        @font-face {
            font-family: 'DINNextLTPro-MediumCond';
            src: url('/fonts/DINNextLTPro-MediumCond.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }
        @font-face {
            font-family: 'DINNextLTPro-LightCondensed';
            src: url('/fonts/DINNextLTPro-LightCondensed.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }
        body {
            font-family: 'Poppins', Arial, sans-serif;
            background-color: #019DDE; /* Blue background */
            color: white;
            text-align: center;
            /* Base flexbox layout is now in common-layout.css */
        }
        
        /* Form specific styles */
        form input {
            display: block;
            width: 80%;
            padding: 0.8rem;
            margin: 0 auto 1rem auto; /* Center the input with auto margins */
            border-radius: 12px;
            border: none;
            font-family: 'DINNextLTPro-LightCondensed', sans-serif;
            font-size: 40pt;
            box-sizing: border-box;
            text-align: center;
        }
        
        button {
            background-color: white;
            color: #009fe3;
            padding: 0.8rem;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-family: 'DINNextLTPro-MediumCond', sans-serif;
            font-size: 20pt; /* Default button text size */
            width: 80%;
            font-weight: normal;
            margin: 10px auto; /* Reduced margin for consistency */
            display: block;
        }
        
        button:hover {
            background-color: #f0f0f0;
        }
        
        .tagline {
            margin: 2rem 0;
            font-size: 1.5rem;
            font-weight: bold;
            line-height: 1.3;
        }
        
        .highlight {
            color: #ffcc00; /* Yellow highlight */
        }
        
        .language-selector {
            text-align: right;
            margin-bottom: 20px;
        }
        
        .language-selector a {
            margin-left: 10px;
            text-decoration: none;
            color: white;
        }
        
        .language-selector a:hover {
            text-decoration: underline;
        }
        
        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: white;
            text-decoration: none;
        }
        
        .back-link:hover {
            text-decoration: underline;
        }
        
        /* Media Queries for Responsive Design */
        /* Mobile devices */
        @media (max-width: 576px) {
            form input {
                font-size: 40pt; /* Smaller font size for mobile */
            }
            button {
                font-size: 30pt; /* Smaller button text size for mobile */
            }
        }
        
        /* Tablets */
        @media (min-width: 577px) and (max-width: 992px) {
            /* h1, h2 font-size is now controlled by common-layout.css */
            form input {
                font-size: 60pt; /* Medium font size for tablets */
            }
            button {
                font-size: 40pt; /* Medium button text size for tablets */
            }
        }
    </style>
</head>
<body>
    <div class="header">
            <img src="/images/uniSR.png" alt="UniSR Logo" class="logo">
            <h2>Registrati ora<br>per prenotare il tuo zaino</h2>
        </div>
        
        <div class="container">
        
        <form action="/submit-email" method="POST" id="email-form">
            <input type="hidden" name="lang" value="it">
            <input type="email" id="email" name="email" required placeholder="@studenti.unisr.it">
            <button type="submit">Invia</button>
        </form>
        
    </div>
    
    <!-- Footer with emailform.png at original size -->
    <div class="page-footer">
        <img src="/images/emailform.png" alt="Email Form Footer">
    </div>
    
    <script>
        // Client-side validation
        document.getElementById('email-form').addEventListener('submit', function(e) {
            const email = document.getElementById('email').value;
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            
            if (!emailRegex.test(email)) {
                e.preventDefault();
                alert('Inserisci un indirizzo email valido');
            }
        });
        
        // Remove the no-js class to indicate JavaScript is enabled
        document.addEventListener('DOMContentLoaded', function() {
            document.documentElement.classList.remove('no-js');
        });
    </script>
</body>
</html>