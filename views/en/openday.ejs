<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=no, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Join the team</title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/common.css" />
    <link rel="stylesheet" href="/css/openday.css" />
  </head>
  <body class="body">
    <div class="main">
      <div class="container">
        <h1 class="title">
          <div class="image header">
            <div class="imageIn">
              <img src="/images/joinTheTeam.svg" alt="Join The Team" />
            </div>
          </div>
        </h1>
        <div>
          <% if(typeof qr === 'undefined'){ %>
          <form action="/speedreg" method="POST" id="emailForm" novalidate>
            <div>
              <input
                type="email"
                name="mail"
                id="email"
                placeholder="tuonome@studenti.unisr.it"
              />
              <div class="errors">
                <p class="error" id="error1">Incorrect email address.</p>
                <p class="error" id="error2">
                  Address not "@studenti.unisr.it"
                </p>
              </div>
            </div>
            <button type="submit">Submit</button>
          </form>
          <% } else { %>
          <div class="image qrtotem">
            <div class="imageIn">
              <img src="/images/qr<%= qr %>.png" alt="uniSR" />
            </div>
          </div>
          <div class="qrSuggestion">Scan the qr code<br />and register now</div>
          <% } %>
        </div>
        <div class="image footer">
          <div class="imageIn">
            <img src="/images/uniSRFooter.png" alt="uniSR" />
          </div>
        </div>
      </div>
    </div>
    <%- include('overlayMenu.ejs') %>
    <script src="/js/index.js"></script>
    <script src="/js/openDay.js"></script>
    <% if(typeof hide !== 'undefined'){ %>
    <script src="/js/totem.js"></script>
    <% } %>
  </body>
</html>
